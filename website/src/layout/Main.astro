---
import { type CatppuccinFlavour } from '../constants/catppuccin.ts';

const { title, catppuccinFlavour = 'latte' } = Astro.props as {
  title?: string;
  catppuccinFlavour?: CatppuccinFlavour;
};
---

<html lang='en' data-catppuccin-flavour={catppuccinFlavour}>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width' />

    <title>{title ?? 'Catppuccin for UnoCSS'}</title>

    <meta name='generator' content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;

    &[data-catppuccin-flavour='latte'] {
      color-scheme: light;
    }
